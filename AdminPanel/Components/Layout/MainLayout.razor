@using MudBlazor
@using Microsoft.AspNetCore.Components
@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />
<MudSnackbarProvider />

@inject NavigationManager Navigation

@* Conditionally hide the sidebar on the login page *@
@if (!Navigation.Uri.Contains("/"))
{
    <MudMainContent>
        @Body
    </MudMainContent>
}
else
{
    <MudLayout>
        <MudAppBar>
            <MudIconButton 
                Icon="@Icons.Material.Filled.Menu" 
                Color="Color.Inherit" 
                Edge="Edge.Start" 
                OnClick="@((e)=>DrawerToggle())" />
            B2B Ecommerce
        </MudAppBar>
        <MudDrawer @bind-Open="@_drawerOpen">
            <MudDrawerHeader>
                <MudText Typo="Typo.h5">Admin Panel</MudText>
            </MudDrawerHeader>
            <MudDrawerContainer>
                <NavMenu />
            </MudDrawerContainer>
        </MudDrawer>
        <MudMainContent>
            @Body
        </MudMainContent>
    </MudLayout>
}

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
